{
    "apiVersion": "v1",
    "kind": "ReplicationController",
    "metadata": {
        "name": "rpc-app-name",
        "labels": {
            "zone": "pre-prod",
            "version": "v1"
        }
    },
    "spec": {
        "replicas": 3,
        "selector": {
            "app": "app-name"
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "app-name"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "ctn-app-name",
                        "image": "jmadelaineaeriandi/hello-world:latest",
                        "ports": [
                            {
                                "containerPort": 8080
                            }
                        ]
                    }
                ]
            }
        }
    }
}